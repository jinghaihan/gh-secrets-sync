{
  "name": "gh-secrets-sync",
  "type": "module",
  "version": "0.1.3",
  "packageManager": "pnpm@10.21.0",
  "description": "CLI tool to batch sync GitHub Actions secrets across multiple repositories.",
  "author": "jinghaihan",
  "license": "MIT",
  "homepage": "https://github.com/jinghaihan/gh-secrets-sync#readme",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/jinghaihan/gh-secrets-sync.git"
  },
  "bugs": {
    "url": "https://github.com/jinghaihan/gh-secrets-sync/issues"
  },
  "keywords": [
    "github",
    "actions",
    "secrets",
    "sync"
  ],
  "exports": {
    ".": "./dist/index.mjs",
    "./cli": "./dist/cli.mjs",
    "./package.json": "./package.json"
  },
  "main": "./dist/index.mjs",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.mts",
  "bin": {
    "gh-secrets-sync": "./bin/gh-secrets-sync.mjs"
  },
  "files": [
    "bin",
    "dist"
  ],
  "scripts": {
    "start": "tsx ./src/cli.ts",
    "build": "unbuild",
    "typecheck": "tsc --noEmit",
    "test": "vitest",
    "lint": "eslint",
    "deps": "taze major -I",
    "release": "bumpp && pnpm publish --no-git-checks",
    "catalog": "pncat",
    "prepare": "npx simple-git-hooks",
    "bootstrap": "pnpm install",
    "prepublishOnly": "pnpm build"
  },
  "dependencies": {
    "@clack/prompts": "catalog:node",
    "@octokit/core": "catalog:utils",
    "ansis": "catalog:node",
    "cac": "catalog:node",
    "execa": "catalog:node",
    "libsodium-wrappers": "catalog:utils",
    "pathe": "catalog:node",
    "yaml": "catalog:node",
    "yocto-spinner": "catalog:node"
  },
  "devDependencies": {
    "@antfu/eslint-config": "catalog:lint",
    "@types/libsodium-wrappers": "catalog:types",
    "@types/node": "catalog:types",
    "bumpp": "catalog:cli",
    "eslint": "catalog:lint",
    "lint-staged": "catalog:lint",
    "pncat": "catalog:cli",
    "simple-git-hooks": "catalog:lint",
    "taze": "catalog:cli",
    "tsx": "catalog:script",
    "typescript": "catalog:tsc",
    "unbuild": "catalog:build",
    "vitest": "catalog:test"
  },
  "simple-git-hooks": {
    "pre-commit": "pnpm lint-staged"
  },
  "lint-staged": {
    "*": "eslint --fix"
  }
}
